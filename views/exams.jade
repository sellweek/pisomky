extends layout

block content
	each exam in exams
		div.panel.panel-default
			div.panel-heading
				span.lead= exam.subject.name
				span.pull-right= exam.textTime
			div.panel-body= exam.topic
			div.panel-footer
				case exam.group
					when 0
						|Písomku píšu obidve skupiny
					when 1 
						|Len prvá skupina
					when 2 
						|Len druhá skupina
